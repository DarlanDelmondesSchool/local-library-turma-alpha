extends layout

block content

  div(class="Subhead")
    div(class="Subhead-heading") Author: #{author.name}
    div(class="Subhead-description") #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  div(class="Box")
    div(class="Box-header")
      h3(class="Box-title") Books

    ul
      each book in author_books
        li(class="Box-row")
          a(href=book.url) #{book.title}
        p.mb-2.ml-3 #{book.summary}

      else
        p.p-2 This author has no books.
      
  hr
  form(action=author.url+'/delete')
    button.btn.btn-danger(type='submit') Delete author